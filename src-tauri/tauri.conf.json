{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "zentaku",
	"version": "0.3.0",
	"identifier": "me.int4.zentaku",
	"build": {
		"beforeDevCommand": "pnpm run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "pnpm run build",
		"frontendDist": "../build"
	},
	"app": {
		"windows": [
			{
				"title": "zentaku",
				"width": 1000,
				"height": 600,
				"decorations": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
